

<div class="container mt">
    <div class="row">
        <form action="/rates" method="POST" class="col s12">
            <h3 class="grey-text text-darken-1">Форма ввода взносов</h3>
            <div class="row ">
                <div class="input-field col s6 z-depth-5">
                    <input  id="month" type="text" name="month"  class="validate">
                    <label for="month">Месяц</label>
                </div>
            </div>
            <div class="row ">
                <div class="input-field col s6 z-depth-5">
                    <input  id="sum" type="text" name="sum"  class="validate">
                    <label for="sum">Сумма</label>
                </div>
            </div>
            <div class="row">
                <input type="submit" class="waves-effect waves-light btn" value="Добавить Взнос">
            </div>
        </form>
    </div>
    <ul class="collection with-header">
        {{#each rates}}
            <li class="collection-item">
                <p class="title center">{{month}}</p>
                <p class="title center">{{sum}} ₽</p>
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header waves-effect waves-light blue">РЕДАКТИРОВАТЬ</div>
                        <div class="collapsible-body">
                            <form action="/rates/update/{{_id}}?_method=PUT" method="POST" class="col s12">
                                <h3 class="grey-text text-darken-1">Форма редактирования</h3>
                                <div class="row ">
                                    <div class="input-field col s6 z-depth-5">
                                        <input  id="month" type="text" name="month"  class="validate">
                                        <label for="month">Дата</label>
                                    </div>
                                </div>
                                <div class="row ">
                                    <div class="input-field col s6 z-depth-5">
                                        <input  id="sum" type="text" name="sum"   class="validate">
                                        <label for="sum">Сумма</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <input type="submit" class="waves-effect waves-light btn" value="Завершить редактирование">
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>
                <form action="/rates/delete/{{_id}}?_method=DELETE" method="POST">
                    <input  class="with-header waves-effect waves-light btn red" type="submit"  value="Удалить"/>
                </form>
            </li>
        {{/each}}
    </ul>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const options ={}
        var elems = document.querySelectorAll('.collapsible');
        var instances = M.Collapsible.init(elems, options);
    });
</script>
